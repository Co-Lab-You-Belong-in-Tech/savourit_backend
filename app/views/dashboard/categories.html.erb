<p style="color: green"><%= notice %></p>
<div id="restaurants">
  <h1 class="mb-3">Categories</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |c| %>
        <tr id="<%= dom_id c %>">
          <th scope="row"><%= c.id %></th>
          <td> <%= c.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
